generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum MessageType {
  direct
  group
  thread
}

model User {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  username   String @unique
  email      String @unique
  password   String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GroupUser {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  userId  String
  groupId String
  createdAt DateTime @default(now())
}

model Thread {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  groupId         String
  createdByUserId String
  name            String
  createdAt DateTime @default(now())
}

model Message {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  type     MessageType
  recipent String
  senderId String // alaways a user will send
  body     String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
